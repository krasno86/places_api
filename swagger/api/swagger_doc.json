{
  "swagger": "2.0",
  "info": {
    "title": "API documentation API V1"
  },
  "basePath": "/",
  "paths": {
    "v1/cities": {
      "get": {
        "summary": "Show all cities",
        "tags": [
          "Cities"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "companies found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "name"
              ]
            }
          }
        }
      }
    },
    "v1/companies_by_city": {
      "get": {
        "summary": "Show companies by city",
        "tags": [
          "Get companies by city"
        ],
        "parameters": [
          {
            "name": "city_id",
            "in": "query",
            "type": "string",
            "required": true
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "companies found"
          }
        }
      }
    },
    "v1/companies_by_category": {
      "get": {
        "summary": "Show companies by category",
        "tags": [
          "Get companies by category"
        ],
        "parameters": [
          {
            "name": "category_id",
            "in": "query",
            "type": "string",
            "required": true
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "companies found"
          }
        }
      }
    },
    "v1/companies": {
      "get": {
        "summary": "Show all companies",
        "tags": [
          "Get all companies"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "companies found"
          }
        }
      }
    },
    "auth/": {
      "post": {
        "summary": "Create new user",
        "tags": [
          "Registration"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "params",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    },
                    "role": {
                      "type": "string",
                      "enum": [
                        "white",
                        "red"
                      ]
                    }
                  },
                  "required": [
                    "username",
                    "email",
                    "password"
                  ]
                }
              },
              "required": [
                "user"
              ]
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Signup"
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    },
    "auth/sign_in": {
      "post": {
        "summary": "Login user",
        "tags": [
          "Login"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "params",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    },
                    "role": {
                      "type": "string",
                      "enum": [
                        "user",
                        "admin"
                      ]
                    }
                  },
                  "required": [
                    "email",
                    "password"
                  ]
                }
              },
              "required": [
                "user"
              ]
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Signin"
          },
          "401": {
            "description": "Signin"
          }
        }
      }
    }
  }
}